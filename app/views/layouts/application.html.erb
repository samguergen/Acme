
<html>
<head>
  <base href="/">
  <title>AcmeWine</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body ng-app="myApp">

<button class="saved-orders" ng-click="showSaved = true" ng-hide="showSaved">View Orders Saved to Database</button>
  <div ng-show="showSaved">
    <button class="saved-orders" ng-click="showSaved = false">Return to Home </button>

    <p>
      <h3>Previously saved orders:</h3> <br>
      <% if @orders %>
        <% @orders.each do |order| %>
        <p>
          order id: <%= order.order_id %> <br>
          customer name: <%= order.name %> <br>
          email: <%= order.email %> <br>
          state: <%= order.state %> <br>
          birthday: <%= order.birthday %> <br>
          zipcode: <%= order.zipcode %> <br>
          valid order? <%= order.validity %> <br>
        </p>
        <% end %>
      <% end %>
    </p>

  </div>

<%= yield %>

</body>
</html>
